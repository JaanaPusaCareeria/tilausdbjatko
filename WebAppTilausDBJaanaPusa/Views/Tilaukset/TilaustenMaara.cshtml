
@{
    ViewBag.Title = "TilaustenMaara";
}

@section scripts {
    <script type="text/javascript">
        let labelTexts = [@Html.Raw(ViewBag.viikonPaiva)];
        let dataValues = [@ViewBag.tilausMaara];
        var ctx = document.getElementById('tilaukset').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelTexts,
                datasets: [{
                    label: 'Tilausten määrä maanantai - perjantai',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}

<h2>Tilausten määrä arkipäivisin</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            <canvas id="tilaukset"></canvas>
            <p>Tähän tulee kaavio</p>
        </div>
    </div>@*row*@
</div>@*container-fluid*@

