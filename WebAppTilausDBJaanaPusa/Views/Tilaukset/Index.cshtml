@model IEnumerable<WebAppTilausDBJaanaPusa.Models.Tilaukset>

@{
    ViewBag.Title = "Tilaukset";
}

<h2>Tilaukset</h2>

<p>
    <a class="btn btn-outline-secondary" href="~/Tilaukset/Create"><img src="~/Icons/plus-square.svg" alt="Create new" width="20" height="20" title="Create new">  Create new</a>
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.TilausID)</th>
        <th>@Html.DisplayNameFor(model => model.AsiakasID)</th>
        <th>@Html.DisplayNameFor(model => model.Toimitusosoite)</th>
        <th>@Html.DisplayNameFor(model => model.Tilauspvm)</th>
        <th>@Html.DisplayNameFor(model => model.Toimituspvm)</th>
        <th>@Html.DisplayNameFor(model => model.Asiakkaat.Nimi)</th>
        <th>@Html.DisplayNameFor(model => model.Postitoimipaikat.Postitoimipaikka)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>@Html.DisplayFor(modelItem => item.TilausID)</td>
    <td>@Html.DisplayFor(modelItem => item.AsiakasID)</td>
    <td>@Html.DisplayFor(modelItem => item.Toimitusosoite)</td>
    <td>@Html.DisplayFor(modelItem => item.Tilauspvm.Value)</td>
    <td>@Html.DisplayFor(modelItem => item.Toimituspvm)</td>
    <td>@Html.DisplayFor(modelItem => item.Asiakkaat.Nimi)</td>
    <td>@Html.DisplayFor(modelItem => item.Postitoimipaikat.Postitoimipaikka)</td>
    <td>
        <a class="btn" href="~/Tilaukset/Edit/@item.TilausID"><img src="~/Icons/pencil.svg" alt="Edit" width="22" height="22" title="Edit"></a>|
        <a class="btn" href="~/Tilaukset/Details/@item.TilausID"><img src="~/Icons/info-square.svg" alt="Details" width="22" height="22" title="Details"></a> |
        <a class="btn" href="~/Tilaukset/Delete/@item.TilausID"><img src="~/Icons/trash.svg" alt="Delete" width="22" height="22" title="Delete"></a>
    </td>
</tr>
}

</table>
