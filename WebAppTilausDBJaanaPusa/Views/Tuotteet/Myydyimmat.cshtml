
@{
    ViewBag.Title = "Myydyimmat";
}

@section scripts {
    <script type="text/javascript">
        let labelTexts = [@Html.Raw(ViewBag.tuoteNimi)];
        let dataValues = [@ViewBag.tuoteMyynti];
        var ctx = document.getElementById('myydyimmat').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelTexts,
                datasets: [{
                    label: 'Top 10 myynti tuotteittain',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(355, 100, 30, 0.2)',
                        'rgba(120, 180, 80, 0.2)',
                        'rgba(40, 150, 225, 0.2)',
                        'rgba(240, 80, 120, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(355, 100, 30, 1)',
                        'rgba(120, 180, 80, 1)',
                        'rgba(40, 150, 225, 1)',
                        'rgba(240, 80, 120, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}

<h2>Myydyimmat</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            <canvas id="myydyimmat"></canvas>
        </div>
    </div>@*row*@
</div>@*container-fluid*@